                                //            jsonData: sndData
                            });
                        }
                       
                    }
                }
            }]
        });

        var MainPanel = Ext.create('Ext.panel.Panel',
           {
               width: '100%',
               height: 400,
               layout: {
                   type: 'hbox',
                   align: 'stretch'
               },
               items: [OrderGrid, ItemsInOrderGrid],
               renderTo: 'OrderTableManager'

           });
    });
