                                            text: 'ОК',
                                            handler: function () {
                                                var sndObject = new Object();
                                                sndObject.Id = OrderGrid.getSelectionModel().getSelection()[0].get('Id');
                                                sndObject.Status = combobox.getValue();
                                                Ext.Ajax.request({
                                                    method: 'POST',
                                                    url: '/Order/UpdateStatus',
                                                    headers: {
                                                        'Content-Type': 'application/json; charset=utf-8'
                                                    },
                                                    params: {


                                                    },
