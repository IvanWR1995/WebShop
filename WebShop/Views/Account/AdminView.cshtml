        <li class="two">@Html.ActionLink("Каталог товаров", "Index", "Item")</li>
        <!--
        -->
        <li class="three">@Html.ActionLink("Заказы", "ManagerOrderView", "Order")</li>
        <!--
    -->
        <li class="four">@Html.ActionLink("Пользователи", "AdminView", "Account")</li>
        <hr class="fourhr" />
    </ul>
    </ul>
</div>
